@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="d-flex justify-content-between px-5">
    <h3>All Roles</h3>
    <a class="btn btn-success" asp-action="Create">Create a new role</a>
</div>
<table class="table shadow rounded-3 overflow-hidden mt-2">
    <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach(var role in Model) {
        <tr>
            <td>@role.Name</td>
            <td class="w-25">
                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning w-100">Edit</a> 
            </td>
            <td class="w-25">
                <form asp-action="Delete" asp-route-id="@role.Id">
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
